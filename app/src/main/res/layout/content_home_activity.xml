    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:weightSum="1"
          android:layout_weight="35"
          android:orientation="vertical"
          tools:ignore="NestedWeights">

        <com.nandu.autox.CircularImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ImgViewPropic"
            android:foregroundGravity="top"
            android:paddingTop="1dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingBottom="10dp"
            />

      </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="65"
        android:minHeight="100dp"
        android:weightSum="90"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:baselineAligned="false">


      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="30"
          android:minHeight="100dp"
          android:weightSum="2"
          android:orientation="vertical"
          tools:ignore="NestedWeights"
          android:paddingTop="15dp"
          android:paddingBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/TxtViewHpEnq"
            android:text="@string/Enq_Count"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="bottom|center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/TxtViewHpEnqCount"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            />

      </LinearLayout>


      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="30"
          android:minHeight="100dp"
          android:weightSum="2"
          android:orientation="vertical"
          tools:ignore="NestedWeights"
          android:paddingBottom="10dp"
          android:paddingTop="15dp"
          >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/TxtViewHpBkng"
            android:text="@string/Bkng_Count"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="bottom|center"
            android:layout_weight="1"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/TxtViewHpBkngCount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="30"
          android:minHeight="100dp"
          android:weightSum="2"
          android:orientation="vertical"
          tools:ignore="NestedWeights"
          android:paddingTop="15dp"
          android:paddingBottom="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/TxtViewHpEnq_calle"
            android:text=""
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:visibility="visible"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/TxtViewHpEnq_called"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:visibility="visible"
            android:textColor="@color/white"
            />



      </LinearLayout>

    </LinearLayout>


  </LinearLayout>


